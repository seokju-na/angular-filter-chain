{
    "extends": ["airbnb-base/legacy"],

    "parserOptions": {
        "ecmaVersion": 5,
        "sourceType": "module",
        "ecmaFeatures": {
            "globalReturn": false,
            "impliedStrict": true,
            "jsx": true
        }
    },

    "env": {
        "browser": true,
        "node": true,
        "es6": false,
        "commonjs": true,
        "amd": true,
        "jasmine": true
    },

    "globals": {
        "angular": true,
        "angular-mocks": true,
        "_": true
    },

    "rules": {
        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "no-param-reassign": 0,
        "no-restricted-syntax": 0,
        "no-trailing-spaces": [2, { "skipBlankLines": true }],
        "func-names": 0,
        "wrap-iife": [1, "any"],
        "vars-on-top": 0
    }
}
